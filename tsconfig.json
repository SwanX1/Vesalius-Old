{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build",
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "alwaysStrict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}